<div class="container-fluid" >
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
<h1> Devour Delicious Burger!!!</h1>
<img src="/assets/img/burger.jpg">
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
        <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <h2>Ordered burger</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
            {{> burger/burger-command devour=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
    <div class="col-lg-4">
      <h2>devoured burger</h2>
      <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <li>  {{this.id}}. {{this.burger_name}}</li>
            {{!-- {{> burger/burger-command devour=true}} --}}
          {{/unless}}
        {{/each}}

      </ul>
    </div>

  </div>
  <div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-6">
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Enter your Burger Name :</label>
          <input type="text" id="ca" name="name" >
        </div>

      <button type="submit">Order Burger</button>
      </form>
    </div>

  </div>



 </div>
